<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerificationActivity"
    android:background="@color/cafe2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!--<com.google.android.material.appbar.MaterialToolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:navigationIcon="@drawable/ic_arrow_back_24"
                app:title="hola"
                style="@style/Widget.MaterialComponents.Toolbar"/>-->

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/act_veri_tool"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                app:navigationIcon="@drawable/ic_arrow_back_24"
                android:elevation="0dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Codigo de VerificaciÃ³n"
                android:textSize="30sp"
                android:textAlignment="center"
                android:layout_marginTop="50dp"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/act_veri_phone_place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/number_holder"
                android:textSize="18sp"
                android:layout_marginHorizontal="20dp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="60dp"
                android:textColor="@android:color/white"/>

            <LinearLayout
                android:id="@+id/act_veri_number_list"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:orientation="horizontal"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="80dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginHorizontal="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/verification_number_size"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/veri_line_size"
                        android:background="@color/veri_line"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginHorizontal="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/verification_number_size"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/veri_line_size"
                        android:background="@color/veri_line"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginHorizontal="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/verification_number_size"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/veri_line_size"
                        android:background="@color/veri_line"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginHorizontal="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/verification_number_size"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/veri_line_size"
                        android:background="@color/veri_line"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginHorizontal="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/verification_number_size"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/veri_line_size"
                        android:background="@color/veri_line"/>
                </LinearLayout>

            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="4"
                android:layout_gravity="bottom"
                android:layout_marginBottom="15dp">

                <TextView
                    android:layout_columnSpan="1"
                    android:layout_rowSpan="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="8dp"
                    android:onClick="typeNumber"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_columnSpan="1"
                    android:layout_rowSpan="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="8dp"
                    android:onClick="typeNumber"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_columnSpan="1"
                    android:layout_rowSpan="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="8dp"
                    android:onClick="typeNumber"
